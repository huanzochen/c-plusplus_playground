  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run C++ Based on single file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
      "preLaunchTask": "run_based_on_single_file",
    },
    {
      "name": "Run C++ Based on directory",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
      "preLaunchTask": "run_based_on_directory",
    },
    {
      "name": "Run Player Example",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/player/main",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
      "preLaunchTask": "player",
      // "setupCommands": [
      //   {
      //     "description": "Enable pretty-printing for gdb",
      //     "text": "-enable-pretty-printing",
      //     "ignoreFailures": true
      //   }
      // ],
      // "miDebuggerPath": "/usr/bin/gdb",
      // "logging": {
      //   "engineLogging": false,
      //   "trace": false,
      //   "traceResponse": false
      // },
    }
  ],
  "code-runner.executorMap": {
    "cpp": "cd $dir && g++ -std=c++17 $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt && rm ./$fileNameWithoutExt"
  }
}