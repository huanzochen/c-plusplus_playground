{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run_based_on_single_file",
			"type": "shell",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-fdiagnostics-color=always",
				"-g",
				"${fileDirname}/${fileBasename}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": "build",
			"detail": "Task generated by Debugger."
		},
		{
			"label": "run_based_on_directory",
			"type": "shell",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-fdiagnostics-color=always",
				"-g",
				"${fileDirname}/*.cpp",
				"-o",
				"${fileDirname}/main"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": "build",
			"detail": "Task generated by Debugger."
		},
		{
			"label": "player",
			"type": "shell",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/player/main.cpp",
				"${workspaceFolder}/player/Account.cpp",
				"-o",
				"${workspaceFolder}/player/main"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": "build",
			"detail": "Task generated by Debugger."
		},
	]
}